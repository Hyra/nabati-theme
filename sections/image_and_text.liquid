<div class="max-w-7xl mx-auto mt-20 px-5 xl:px-0 image-text-{{ section.id }}">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-16">
    <div class="flex items-center {% if section.settings.reverse_order %}lg:order-last{% endif %}">
      <img
        src="{{ section.settings.image | image_url: width: 565 }}"
        alt="Dish"
        width="565"
        height="395"
        class="rounded-lg w-full h-32 md:h-64 md:h-auto object-cover"
      >
    </div>
    <div class="flex flex-col justify-center">
      <div class="text-red-900 font-serif text-base font-bold mb-3">{{ section.settings.leader_text }}</div>
      <div class="text-nabati-pink font-bannertype uppercase text-6xl">{{ section.settings.header_text }}</div>
      <p class="font-rubik text-base text-peanut-brown">
        {{ section.settings.body_text }}
      </p>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Image and Text",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "leader_text",
      "label": "Leader Text"
    },
    {
      "type": "text",
      "id": "header_text",
      "label": "Header Text"
    },
    {
      "type": "richtext",
      "id": "body_text",
      "label": "Body Text"
    },
    {
      "type": "checkbox",
      "id": "reverse_order",
      "label": "Reverse Order",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Image and Text Section"
    }
  ]
}
{% endschema %}
