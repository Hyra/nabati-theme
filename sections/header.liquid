<header class="max-w-7xl mx-auto mt-10 mb-20 px-5 py-5 xl:px-0">
  <nav class="flex items-center justify-between max-w-7xl mx-auto">
    <!-- Logo -->
    <div class="w-[150px]">
      <a href="{{ routes.root_url }}" class="text-white text-xl font-bold">
        <img src="{{ 'nabati.png' | asset_url }}" alt="Nabati" width="150" height="40">
      </a>
    </div>

    <!-- menu items -->
    <ul class="flex justify-end space-x-4 ml-auto">
      {% comment %}
        {% for link in linklists['main-menu'].links %}
          <li>
            <a href="{{ link.url }}" class="font-serif text-red-700 hover:text-red-900 transition-colors duration-300">
              {{- link.title -}}
            </a>
          </li>
        {% endfor %}
      {% endcomment %}
      <li>
        <button
          onclick="openCartDrawer()"
          class="cart-toggle flex items-center gap-2 bg-nabati-pink hover:bg-peanut-brown text-white pl-4 pr-2 py-2 rounded-full transition-all duration-300 hover:scale-105 font-rubik"
          aria-label="Open shopping cart with {{ cart.item_count }} items"
        >
          <!-- Shopping Cart Icon -->
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="9" cy="21" r="1"></circle>
            <circle cx="20" cy="21" r="1"></circle>
            <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
          </svg>
          
          <span class="font-medium">Cart</span>
          
          <!-- Item count inside button with bamboo beige background -->
          <span class="bg-bamboo-beige text-peanut-brown font-bold px-2.5 py-1 rounded-full min-w-[28px] text-center text-sm ml-1">
            <span class="cart-count">{{ cart.item_count }}</span>
          </span>
        </button>
      </li>
    </ul>
  </nav>
</header>
