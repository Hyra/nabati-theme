<div class="h-screen flex items-center justify-center">
  <!-- Bordered Section -->
  <div class="relative rounded-3xl overflow-hidden w-full h-full p-8">
    <div class="h-full flex">
      <!-- Text Content (1/3) -->
      <div class="w-1/3 bg-[FD2B53] flex flex-col justify-end items-start p-8 rounded-l-3xl">
        <div class="font-bannertype text-5xl text-[#471313] uppercase">Authentic taste</div>
        <div class="font-bannertype text-7xl text-[#FBE9CE] uppercase">Plantbased</div>
        <div class="font-bannertype text-7xl text-[#FBE9CE] uppercase">Indonesian Food</div>
        <div class="font-bannertype text-5xl text-[#471313] uppercase">Rooted in flavor</div>
        <div class="mt-6 flex space-x-4">
          <button class="bg-black text-white font-bold py-2 px-4 rounded shadow-lg">See products</button>
          <button class="bg-white text-black font-bold py-2 px-4 border border-black rounded shadow-lg">
            About us
          </button>
        </div>

        <div class="hidden absolute right-[-180px] bottom-[220px] ml-10 w-[700px]">
          <div class="font-bannertype text-5xl text-[#461313] uppercase">Authentic taste</div>
          <div class="font-bannertype text-7xl text-[#FBE9CE] uppercase">Plantbased</div>
          <div class="font-bannertype text-7xl text-[#FBE9CE] uppercase">Indonesian Food</div>
          <div class="font-bannertype text-5xl text-[#471313] uppercase">Rooted in flavor</div>
        </div>
      </div>

      <!-- Image Content (2/3) -->
      <div
        class="w-2/3 bg-cover bg-center rounded-r-3xl"
        style="background-image: url('https://img.freepik.com/premium-photo/lavish-indonesian-rijsttafel-spread_961875-395046.jpg?w=2000');"
      ></div>

      <!-- Logo (Overlapping Both Sides) -->
      <div class="absolute left-[60px] top-[60px]">
        {% comment %} <h1 class="text-5xl font-bold text-white drop-shadow-lg">nabati</h1> {% endcomment %}
        <img src="{{ 'nabati_big.png' | asset_url }}" alt="nabati" class="w-1/5">
      </div>
    </div>
  </div>
</div>
